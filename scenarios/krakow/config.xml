<?xml version="1.0" ?>
<!DOCTYPE config SYSTEM "http://www.matsim.org/files/dtd/config_v2.dtd">
<config>

    <module name="global">
        <param name="randomSeed" value="4711" />
        <param name="coordinateSystem" value="WGS84" />
    </module>

    <module name="network">
        <param name="inputNetworkFile" value="network.xml" />
        <param name="laneDefinitionsFile" value="lanes.xml" />
    </module>

    <module name="plans">
        <param name="inputPlansFile" value="population.xml" />
    </module>

    <module name="controler">
        <param name="outputDirectory" value="./output" />
        <param name="firstIteration" value="0" />
        <param name="lastIteration" value="0" />
    </module>

    <module name="qsim">
        <!-- "start/endTime" of MobSim (00:00:00 == take earliest activity time/ run as long as active vehicles exist) -->
        <param name="startTime" value="00:00:00" />
        <param name="endTime" value="00:00:00" />

        <param name = "snapshotperiod"	value = "00:00:00"/> <!-- 00:00:00 means NO snapshot writing -->

        <!--the signals don't use lanes currently-->
        <param name="useLanes" value="false" />

        <!--fast flow must be disabled when using signals-->
        <param name="usingFastCapacityUpdate" value="false" />
    </module>

    <module name="planCalcScore">
        <param name="learningRate" value="1.0" />
        <param name="BrainExpBeta" value="2.0" />

        <param name="lateArrival" value="-14" />
        <param name="earlyDeparture" value="-4" />
        <param name="performing" value="+9" />
        <param name="traveling" value="-9" />
        <param name="waiting" value="-0" />

        <param name="activityType_0"            value="home" />
        <param name="activityPriority_0"        value="1" />
        <param name="activityMinimalDuration_0" value="8:00:00" />
        <param name="activityTypicalDuration_0" value="12:00:00" />

        <param name="activityType_1"            value="work" />
        <param name="activityPriority_1"        value="1" />
        <param name="activityTypicalDuration_1" value="08:00:00" />
        <param name="activityMinimalDuration_1" value="06:00:00" />

        <param name="activityType_2"            value="shop" />
        <param name="activityPriority_2"        value="2" />
        <param name="activityTypicalDuration_2" value="01:00:00" />
        <param name="activityMinimalDuration_2" value="00:15:00" />
    </module>

    <module name="strategy">
        <param name="maxAgentPlanMemorySize" value="5" /> <!-- 0 means unlimited -->

        <param name="ModuleProbability_1" value="0.9" />
        <param name="Module_1" value="BestScore" />

        <param name="ModuleProbability_2" value="0.1" />
        <param name="Module_2" value="ReRoute" />
    </module>

    <module name="signalsystems" >
        <!-- Possible values: WARN, EXCEPTION -->
        <param name="actionOnIntergreenViolation" value="WARN" />
        <param name="ambertimes" value="null" />
        <param name="intergreentimes" value="null" />
        <param name="signalcontrol" value="signal_control.xml" />
        <param name="signalgroups" value="signal_groups.xml" />
        <param name="signalsystems" value="signal_systems.xml" />
        <param name="useAmbertimes" value="false" />
        <param name="useIntergreentimes" value="false" />
        <param name="useSignalsystems" value="true" />
    </module>

</config>
